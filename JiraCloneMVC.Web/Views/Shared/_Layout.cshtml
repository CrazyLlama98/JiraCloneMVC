<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MR Mange Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <div class="navbar navbar-expand-md fixed-top bg-white navbar-light p-0 shadow">
        <button type="button" class="navbar-toggler p-1 mt-2 mx-2" data-toggle="collapse" aria-expanded="false" data-target=".navbar-collapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse bg-white p-0">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, htmlAttributes: new { @class = "navbar-buttons nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, htmlAttributes: new { @class = "navbar-buttons nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, htmlAttributes: new { @class = "navbar-buttons nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Projects", "Index", "Projects", null, htmlAttributes: new { @class = "navbar-buttons nav-link" })</li>
                @if (User.IsInRole("Administrator"))
                {
                    <li class="nav-item">@Html.ActionLink("Dashboard", "Index", "Admin", null, htmlAttributes: new { @class = "navbar-buttons nav-link" })</li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>

    <!-- Body container -->
    @RenderBody()

<!-- Footer -->
<footer class="py-5 bg-dark card-footer">
    <div class="container">
        <p class="m-0 text-center text-white small">Copyright &copy; @DateTime.Now.Year - MR Mange Application</p>
    </div>
    <!-- /.container -->
</footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)
</body>
</html>
