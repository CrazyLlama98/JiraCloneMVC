@using JiraCloneMVC.Web.Models
@model dynamic  

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<h3 class="alert-danger">@ViewBag.message</h3>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Organizer Name
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Status
        </th>
        <th>
            StartDate
        </th>
        <th>
            EndDate
        </th>
        <th></th>
    </tr>

    @foreach (Project project in Model.Projects)
    {
        <tr>
            <td>
                <i class="glyphicon glyphicon-user"></i>@project.Organizer.UserName
            </td>
            <td>
                @project.Name
            </td>
            <td>
                @project.Description
            </td>
            <td>
                @project.Status
            </td>
            <td>
                @project.StartDate
            </td>
            <td>
                @project.EndDate
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = project.Id}) |
                @Html.ActionLink("Details", "Details", new {id = project.Id}) |
                @Html.ActionLink("Delete", "Delete", new {id = project.Id})
            </td>
        </tr>
    }

</table>