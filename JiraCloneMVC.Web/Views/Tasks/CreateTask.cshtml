@using JiraCloneMVC.Web.ViewModels
@model CreateTaskViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-10 col-md-8 col-lg-6 card">
        <div id="createTaskForm" class="card-body">
            <h3 class="card-title">Create a new task</h3>
            @using (Html.BeginForm("Create", "Tasks", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Title, new { @class = "col-10 col-md-7 col-lg-6 control-label" })
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control col-10 col-lg-8" })
                    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Description, new { @class = "col-10 col-md-7 col-lg-6 control-label" })
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control col-10 col-lg-8" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-4 col-md-2 text-center">
                    <input type="submit" value="Create Task" class="btn btn-default" />
                </div>
            }
        </div>
    </div>
</div>
