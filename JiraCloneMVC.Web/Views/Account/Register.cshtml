@using JiraCloneMVC.Web.ViewModels;
@model RegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Register";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-10 col-md-8 col-lg-6 card shadow-lg">
            <div id="registerForm" class="card-body">
                <h2 class="card-title">@ViewBag.Title.</h2>

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Create a new account.</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-10 col-md-7 col-lg-6 control-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-10 col-lg-8" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Username, new { @class = "col-10 col-md-7 col-lg-6 control-label" })
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control col-10 col-lg-8" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-10 col-md-7 col-lg-6 control-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control col-10 col-lg-8" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-10 col-md-7 col-lg-6 control-label" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-10 col-lg-8" })
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Register" />
                        </div>
                    </div>
                    <p>
                        @Html.ActionLink("Already Registered? Log into your account", "Login")
                    </p>
                }
            </div>
        </div>
    </div>
</div>


