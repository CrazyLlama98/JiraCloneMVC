@{
    ViewBag.Title = "Contact";
}
<header class="home-index-header">
    <img src="~/src/bg-07.jpg" alt="Team" class="home-index-header-img" id="imageHeader">
    <div class="home-index-header-title-container">
        <h1 class="home-index-header-title">
            <span class="home-index-header-title-bold">
                <b>CONTACT US</b>
            </span>
        </h1>
        <a href="#section-1" class="home-contact-header-button">Get in touch</a>
    </div>
</header>

<section id="section-1" class="home-contact-section1">
    <div class="container">
        <h3>Get in touch</h3>
        <h1>The power of teamwork</h1>
        <p>
            Behind every great human achievement, there is a team.

            From medicine and space travel, to disaster response and pizza deliveries, our products help teams all over the planet advance humanity through the power of software.

            Our mission is to help unleash the potential of every team through open work.
        </p>
    </div>
    <div class="container-fluid" style="margin: 0 !important; padding: 0 !important">
        <div class="col-md-6" style="margin: 0 !important; padding: 0 !important">
            <div class="mapouter">
                <div class="gmap_canvas">
                    <iframe width="1000" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=university%20of%20san%20francisco&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.pureblack.de"></a>
                </div>
                <style>
                    .mapouter {
                        float: left;
                        text-align: left;
                        height: auto;
                        width: 100%;
                    }

                    .gmap_canvas {
                        overflow: hidden;
                        background: none !important;
                        height: auto;
                        width: 100%;
                    }
                </style>
            </div>
        </div>
        <div class="col-md-6 home-contact-form-container">
            <div class="home-contact-form-content">
                <form class="home-contact-form">
                    <div>
                        <input type="text" id="name" placeholder="Full name" wtx-context="0C4CFFA2-7462-4407-8EEA-93C951B6A75E">
                    </div>
                    <div>
                        <input type="email" id="email" placeholder="Email address" wtx-context="E74EFCE0-197A-4464-87DE-6D09F3BE0FD8">
                    </div>
                    <div>
                        <textarea rows="8" id="message" placeholder="Message"></textarea>
                    </div>
                    <button type="button" class="btn btn-primary btn-block">Send <i class="fa fa-paper-plane" aria-hidden="true"></i></button>
                </form>
            </div>
        </div>
    </div>
</section>