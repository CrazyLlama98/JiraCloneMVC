@using JiraCloneMVC.Web.Models
@model dynamic
@{
    ViewBag.Title = "SeeProjects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container my-5">
    <h2>See Projects</h2>


    <table class="table">
        <tr>
            <th>
                Organizer Name
            </th>
            <th>
                Name
            </th>
            <th>
                Status
            </th>
            <th>
                StartDate
            </th>
            <th>
                EndDate
            </th>
            <th></th>
        </tr>

        @foreach (Project project in Model.Projects)
        {
            <tr>
                <td>
                    <i class="glyphicon glyphicon-user"></i>@project.Organizer.UserName
                </td>
                <td>
                    @project.Name
                </td>
                <td>
                    @project.Status
                </td>
                <td>
                    @project.StartDate
                </td>
                <td>
                    @project.EndDate
                </td>
                <td>
                    <div class="btn-group">
                        <a href="/Projects/Edit/@project.Id" class="btn btn-primary">Edit</a>
                        <a href="/Projects/Details/@project.Id" class="btn btn-primary">Details</a>
                        <a href="/Projects/Delete/@project.Id" class="btn btn-primary">Delete</a>
                        <a href="/Admin/SwitchOrganizator/@project.Id" class="btn btn-primary">Change organizer</a>
                    </div>
                </td>
            </tr>
        }

    </table>
    </div>